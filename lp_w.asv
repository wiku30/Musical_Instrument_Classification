function [ar]=lp_w(file,time,varargin)
    [wav,fs]=audioread(file);
    wav = wav(:,1);
    if nargin>=3
        lvl=varargin{1};
    else
        lvl=12;
    end
    l=length(time);
    ar = zeros (l,lvl+1);
    for i = 1:length(time)
        t = time(i);
        window = (round(t*fs+1):round(t*fs+))
        [ar(i),e,k]=lpcauto(wav(window),lvl);
    end
end